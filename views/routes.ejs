<% include ./partials/header %>


<div class="main ui container">
    
    <div class="ui top attached">
      <div id="routesHeader">RESTful Routes</div>
        <table id="routesChart" class="ui striped celled table">
          <thead>
            <tr><th>Name</th>
            <th>Path</th>
            <th>HTTP Verb</th>
               <th>Purpose</th>
               <th>Mongoose Method</th>
          </tr></thead><tbody>
            <tr>
              <td>Index</td>
              <td>/blogs</td>
              <td>GET</td>
              <td>List all blogs.</td>
              <td>Blog.find()</td>
              
            </tr>
            <tr>
              <td>New</td>
              <td>/blogs/new</td>
              <td>GET</td>
              <td>Show new blog form.</td>
              <td>N/A</td>
            </tr>
            <tr>
              <td>Create</td>
              <td>/blogs</td>
              <td>POST</td>
              <td>Create a new blog, then redirect somewhere.</td>
              <td>Blog.create()</td>
            </tr><tr>
              <td>Show</td>
              <td>/blogs/:id</td>
              <td>GET</td>
              <td>Show info about a specific blog.</td>
              <td>Blog.findById()</td>
            </tr><tr>
              <td>Edit</td>
              <td>/blogs/edit/:id</td>
              <td>GET</td>
              <td>Show edit form for a blog.</td>
              <td>Blog.findById()</td>
            </tr><tr>
              <td>Update</td>
              <td>/blogs/:id</td>
              <td>PUT</td>
              <td>Update a specific blog, then redirect somewhere</td>
              <td>Blog.findByIdAndUpdate()</td>
            </tr><tr>
              <td>Destroy</td>
              <td>/blogs/:id</td>
              <td>DELETE</td>
              <td>Delete a specific blog, then redirect somewhere</td>
              <td>Blog.findByIdAndRemove()</td>
            </tr>
          </tbody>
        </table>
    </div>
</div>
